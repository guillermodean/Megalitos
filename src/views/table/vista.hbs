{{#each card}}
<div class="container-fluid mx-auto p-4">
    <h1 class="text-center">{{Nombre}}</h1>
    <div class="row p-4">
        <div class="col float-left">

            <div class="card p-4 md-auto">
                <div class="card-header">Descripción</div>
                <div class="card-body">
                    <p>{{Descripcion}}</p>
                </div>
            </div>
            <div class="p-1"></div>
            <div class="card p-4 md-auto">
                <div class="card-header">Observaciones</div>
                <div class="card-body">
                    <p>{{Observaciones}}</p>
                </div>
            </div>
            <div class="p-2"></div>
            <div class="card p-4 md-auto">
                <div class="card-header">Municipio</div>
                <div class="card-body">
                    <p>{{Municipio}}</p>
                </div>
            </div>
            <div class="p-1"></div>
            <div class="card p-4 md-auto">
                <div class="card-header">Ubicacion</div>
                <div class="card-body">
                    <p>{{Ubicacion}}</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3  px-4">
            <div class="card p-4 md-auto">
                <div class="card-header">Tipo yacimiento</div>
                <div class="card-body text-center">

                    <p>{{Des_clas}}</p>
                </div>
            </div>
            <div class="p-1"></div>
            <div class="card p-4 md-auto">
                <div class="card-header">Localizado por</div>
                <div class="card-body text-center">
                    <p>{{Localizado_autor}}</p>
                </div>
            </div>
            <div class="p-1"></div>
            <div class="card p-4 md-auto">
                <div class="card-header">Fecha de localización</div>
                <div class="card-body text-center">
                    <p>{{Localizado_fecha}}</p>
                </div>
            </div>
            <div class="p-1"></div>
            <div class="card p-4 md-auto">
                <div class="card-body text-center">
                    <p>UTM X: {{UTM_X}}</p>
                    <p>UTM Y: {{UTM_Y}}</p>
                    <p>Altura {{UTM_Z}} metros</p>
                    <a href="https://www.google.es/maps/search/{{Coordenadas}}" class="btn btn-secondary"
                        target="_blank">Abrir en Google Maps</a>
                </div>
            </div>
        </div>
    </div>

    <div id="carousel" class="carousel slide l-4 r-4" data-ride="carousel">
        <div class="carousel-inner">
            {{#if Anexo_path_1}}
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_1}}" alt="First slide">
                <h1 href="/img/141208_Megalitos/{{Anexo_path_1}}" target="_blank">visualizar</h1>
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_2}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_2}}" alt="Second slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_3}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_3}}" alt="Third slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_4}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_4}}" alt="Forth slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_5}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_5}}" alt="Fifth slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_6}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_6}}" alt="more slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_7}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_7}}" alt="more slide">
            </div>
            {{else}}
            {{/if}}
            {{#if Anexo_path_8}}
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/141208_Megalitos/{{Anexo_path_8}}" alt="yeah slide">
            </div>
            {{else}}
            {{/if}}
            <div class="card-body text-center">
                <p>No hay registradas fotos para este megalito</p>
            </div>


        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

{{/each}}